<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	
	<persistence-unit name="Mi-JPA-con-JSF" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>com.searchschool.bean.Colegio</class>
		<class>com.searchschool.bean.TipoColegio</class>
		<class>com.searchschool.bean.Origen</class>
		<class>com.searchschool.bean.Usuario</class>
		<class>com.searchschool.bean.RedColegio</class>
		<class>com.searchschool.bean.Valoracion</class>
		<class>com.searchschool.bean.TipoUsuario</class>
		<class>com.searchschool.bean.Comentario</class>
		<class>com.searchschool.bean.ColegioUsuario</class>
		<class>com.searchschool.bean.ConvenioColegio</class>
		<class>com.searchschool.bean.Convenio</class>
		<class>com.searchschool.bean.Visitaslogueo</class>
		<properties>
      		<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      		<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/prueba"/>
      		<property name="javax.persistence.jdbc.user" value="root"/>
      		<property name="javax.persistence.jdbc.password" value="root"/>
			<property name="javax.persistence.lock.scope" value="NORMAL"/>
      		<property name="eclipselink.logging.level" value="FINE"/>      		      		
      	</properties>
    	 
	</persistence-unit>
	
</persistence>
